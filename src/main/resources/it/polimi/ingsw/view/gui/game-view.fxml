       <Canvas fx:id="personalGoalCanvas" height="200.0" width="200.0" />
       <ImageView fx:id="personalGoalImage" fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
           <image>
               <Image url="@images/personal_goal_cards/front_EMPTY.jpg" />
           </image></ImageView>
      <Button fx:id="randomMoveButton" mnemonicParsing="false" onAction="#onRandomMoveButtonClick" text="Button" />
